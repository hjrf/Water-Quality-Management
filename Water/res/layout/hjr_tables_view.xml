<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       
  	<ListView
        android:id="@+id/tableNameList"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:layout_marginBottom="53dp"
        android:background="@android:color/white" >
    </ListView>
    
    <Button
        android:id="@+id/showTableNames"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示所有数据表" />

    <TextView
        android:id="@+id/currTbaleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当前选择数据库：" />

    <TextView
        android:id="@+id/selectedTableName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <Button
        android:id="@+id/deleteTable"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除选中数据表" />

    <Button
        android:id="@+id/controlCurrTable"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操作选中数据表" />
    
    <EditText
        android:id="@+id/tableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/createTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建新数据表" />
    
</LinearLayout>
